{
  "name": "docker_node_app",
  "version": "1.0.0",
  "description": "Node.js and Express on Docker testing application",
  "author": "Chad Rempp <crempp@gmail.com>",
  "repository" : {
    "type" : "git",
    "url" : "https://gitlab.com/crempp/node-example.git"
  },
  "license" : "GPL-3.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "./node_modules/jest/bin/jest.js --forceExit",
    "test-ci": "./node_modules/jest/bin/jest.js --forceExit --testResultsProcessor='./node_modules/jest-junit-reporter'"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "testResultsProcessor": "./node_modules/jest-junit-reporter"
  },
  "dependencies": {
    "express": "latest",
    "express-handlebars": "^3.0.0",
    "express-winston": "^2.4.0",
    "handlebars": "^4.0.10",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "jest-junit-reporter": "^1.1.0",
    "supertest": "^3.0.0"
  }
}
